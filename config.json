{
    "mqtt": {
        "hostname": "mosquitto",
        "port": 8883,
        "keepalive": 60,
        "username": null,
        "password": null,
        "certfile": "/ca/certs/mqtt-ca.crt",
        "keyfile": "/ca/private/mqtt-ca.key",
        "keyfile_password": null,
        "cacert": "/ca/certs/root.crt",
        "insecure": false,
        "reconnect_maxdelay": 60
    },
    "log": {
        "output": "CONSOLE",
        "level": "DEBUG"
    },
    "daemon": {
        "mosquitto_subjectAltName": [
            "DNS:localhost",
            "IP:127.0.0.1",
            "IP:::1",
            "DNS:things.local",
            "IP:192.168.0.2"
        ],
        "expiry": {
            "days": 90
        },
        "signcert": "/ca/certs/sign.crt",
        "signkey": "/ca/private/sign.key",
        "signkey_password": null
    },
    "monitor": {
        "refresh": {
            "days": 7,
            "hours": 0,
            "minutes": 0
        },
        "skew_warn": {
            "hours": 0,
            "minutes": 10
        },
        "algorithm": "rsa",
        "keylen": 2048
    },
    "provision": {
        "algorithm": "rsa",
        "keylen": 2048,
        "expiry": {
            "days": 2
        }
    }
}
