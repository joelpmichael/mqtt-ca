{
    "clients": [
        {
            "username": "mosquitto",
            "textName": "Dynsec admin user",
            "roles": [
                {
                    "rolename": "admin"
                }
            ]
        },
        {
            "username": "mqtt-ca",
            "textName": "MQTT Cert Authority",
            "roles": [
                {
                    "rolename": "mqtt-ca-admin"
                },
                {
                    "rolename": "mqtt-ca-client"
                }
            ]
        }
    ],
    "groups": [
        {
            "groupname": "anon-group",
            "roles": [
                {
                    "rolename": "anon-role"
                }
            ],
            "clients": []
        }
    ],
    "anonymousGroup": "anon-group",
    "roles": [
        {
            "rolename": "admin",
            "acls": [
                {
                    "acltype": "publishClientSend",
                    "topic": "$CONTROL/dynamic-security/#",
                    "allow": true
                },
                {
                    "acltype": "publishClientReceive",
                    "topic": "$CONTROL/dynamic-security/#",
                    "allow": true
                },
                {
                    "acltype": "subscribePattern",
                    "topic": "$CONTROL/dynamic-security/#",
                    "allow": true
                },
                {
                    "acltype": "publishClientReceive",
                    "topic": "$SYS/#",
                    "allow": true
                },
                {
                    "acltype": "subscribePattern",
                    "topic": "$SYS/#",
                    "allow": true
                },
                {
                    "acltype": "publishClientReceive",
                    "topic": "#",
                    "allow": true
                },
                {
                    "acltype": "subscribePattern",
                    "topic": "#",
                    "allow": true
                },
                {
                    "acltype": "unsubscribePattern",
                    "topic": "#",
                    "allow": true
                }
            ]
        },
        {
            "rolename": "mqtt-ca-admin",
            "acls": [
                {
                    "acltype": "publishClientSend",
                    "topic": "/mqtt-ca/+/cert",
                    "allow": true
                },
                {
                    "acltype": "publishClientSend",
                    "topic": "/mqtt-ca/timestamp-utc",
                    "allow": true
                },
                {
                    "acltype": "publishClientReceive",
                    "topic": "/mqtt-ca/+/csr",
                    "allow": true
                },
                {
                    "acltype": "subscribePattern",
                    "topic": "/mqtt-ca/+/csr",
                    "allow": true
                }
            ]
        },
        {
            "rolename": "mqtt-ca-client",
            "acls": [
                {
                    "acltype": "publishClientSend",
                    "topic": "/mqtt-ca/mqtt-ca-client/csr",
                    "allow": true
                },
                {
                    "acltype": "publishClientReceive",
                    "topic": "/mqtt-ca/timestamp-utc",
                    "allow": true
                },
                {
                    "acltype": "subscribePattern",
                    "topic": "/mqtt-ca/timestamp-utc",
                    "allow": true
                },
                {
                    "acltype": "publishClientReceive",
                    "topic": "/mqtt-ca/mqtt-ca-client/cert",
                    "allow": true
                },
                {
                    "acltype": "subscribePattern",
                    "topic": "/mqtt-ca/mqtt-ca-client/cert",
                    "allow": true
                }
            ]
        }
    ],
    "defaultACLAccess": {
        "publishClientSend": false,
        "publishClientReceive": true,
        "subscribe": false,
        "unsubscribe": true
    }
}
