    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Daemon Mode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/mqtt-ca.py",
            "args": [
                "daemon"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Monitor Mode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/mqtt-ca.py",
            "args": [
                "monitor",
                "cert",
                "key"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
